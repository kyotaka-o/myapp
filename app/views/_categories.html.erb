
  <div class="categories">
    <p>
      <%= fa_icon("bars") %>
      Categories
    </p>
    <% categories.each do |category| %>   
      <%= link_to category_posts_path(category) do %>
        <div class="category">
          <%= category.name %>
        </div>
      <% end %>  
    <% end %>  
  </div>
