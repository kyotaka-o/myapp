<div class="main-contents">
  <div  class="subject">
    <p>
      <%= icon('fas', 'fish') %>新着投稿20件
    </p>
  </div>
  <div class="posts">
    <% if @posts.present? %>
      <% @posts.each do |post| %>  
        <%= render partial: "/posts/post",locals:{ post: post} %>
      <% end %>
      
