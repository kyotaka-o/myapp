<div class="main-contents">
  <div  class="subject">
    <p>
      <%= icon('fas', 'user-astronaut') %>ユーザー一覧
    </p>
  </div>
  <div class="search">
      <%= search_form_for(@q, url:users_path) do |form| %>
        <div class="search__box">
          <div class="search__icon">
            <%= icon('fas', 'search')%> 
          </div>     
          <div class="search__input__box">   
            <%= form.label :name_cont, 'キーワード入力'%>
            <%= form.search_field :name_cont %>
          </div> 
        </div>
        <%= form.submit "検索" ,class:"show-search-submit" %>
      <%end%>
    <%= sort_link(@q, :name, "名前順") %>
    </div>
    <% if @users.present? %>
      <div  class="all-user">
        <%= render @users %>
      </div>
    <% else %>
      <div class="message">
        <p>一致するユーザーが見つかりません</p>
      </div> 
    <% end %>

</div>
 <%= paginate @users %>