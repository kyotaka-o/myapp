<div  class="subject">
  <p>
    <%= fa_icon("user-secret") %><%= @posts[0].user.name %>さんの投稿一覧
  </p>
</div>
<div class="posts">
  <% if @posts.present? %>
    <% @posts.each do |post| %>  
      <%= render partial: "/posts/post",locals:{ post: post} %>
    <% end %>
  <% else %>
    <p>まだ投稿がありません</p>
  <% end %>
</div>